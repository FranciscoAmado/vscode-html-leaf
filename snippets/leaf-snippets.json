{
    "raw": {
        "prefix": "#raw",
        "description": "Raw block",
        "body": [
            "#raw() {",
            "$1",
            "}"
        ]
    },
    "tag": {
        "prefix": "#tag",
        "description": "Empty tag",
        "body": [
            "#($1)"
        ]
    },
    "for loop": {
        "prefix": "#loop",
        "description": "For loop",
        "body": [
            "#loop(${array}, \"${string}\") {",
            "$1",
            "}"
        ]
    },
    "if-else condition": {
        "prefix": "#if-else",
        "description": "If-else condition",
        "body": [
            "#if(${boolean}) {",
            "$1",
            "} ##else() {",
            "$2",
            "}"
        ]
    },
    "import leaf": {
        "prefix": "#import",
        "description": "Import a Leaf file",
        "body": [
            "#import(\"${string}\")"
        ]
    },
    "export leaf": {
        "prefix": "#export",
        "description": "Export a Leaf block",
        "body": [
            "#export(\"${string}\") {",
            "$1",
            "}"
        ]
    },
    "extend leaf": {
        "prefix": "#extend",
        "description": "Extend from other Leaf file",
        "body": [
            "#extend(\"${string}\")"
        ]
    }
}
